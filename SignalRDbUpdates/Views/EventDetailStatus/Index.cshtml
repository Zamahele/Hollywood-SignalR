@model IEnumerable<BLL.EventDetailStatus.EventDetailStatus>

@{
    ViewData["Title"] = "Index";
}

<h4 align="center">Statuses</h4>

<p>
    <a href="@Url.Action("Create","EventDetailStatus")" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign"> Create</i></a>
</p>
<div class="wrapper fadeInDown">
<div id="formContentDisplay">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventDetailStatusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDetailStatusName)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDetailStatusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDetailStatusName)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-info btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.EventDetailStatusId">
                                <i class="fa fa-pencil-alt"></i>
                                Edit
                            </a>
                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.EventDetailStatusId">
                                <i class="fa fa-trash" color="red"></i>
                                Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</div>