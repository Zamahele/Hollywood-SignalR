@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>
<p>
    <a href="@Url.Action("Create","Role")" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign"> Create</i></a>
</p>
<div class="wrapper fadeInDown">
    <div id="formContentDisplay">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Name</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
