@model BLL.Tournament.Tournament
@using BLL.Event

@{
    ViewBag.Title = "Delete";
    var linkedEvents = (List<Event>) ViewData["LinkedEvents"];
}
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Tournament</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TournamentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TournamentName)
            </dd>

        </dl>

        <h5> Linked Tournament</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        EventId
                    </th>
                    <th>
                        EventName
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in linkedEvents)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
