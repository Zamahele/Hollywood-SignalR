@model BLL.Tournament.Tournament
@using BLL.Event

@{
    ViewBag.Title = "Delete";
    var linkedEvents = (List<Event>)ViewData["LinkedEvents"];
}

    <div class="wrapper fadeInDown">
        <div id="formContentDisplay">
            <h4 align="center">Delete</h4>

            <h3 align="center">Are you sure you want to delete this?</h3>
            <div>
                <h5>Tournament</h5>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TournamentName):
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TournamentName)
                    </dd>

                </dl>
                <hr />
                <h5> Linked Tournament</h5>
                <hr />
                @foreach (var item in linkedEvents)
                {
                    <dl class="dl-horizontal">
                        <dt>
                            EventName:
                        </dt>

                        <dd>
                            @item.EventName
                        </dd>

                    </dl>
                }
            </div>
            <div class="form-group">
                <div >
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div id="deletePadding">
                                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>