@model IEnumerable<BLL.Tournament.Tournament>

@{
    ViewData["Title"] = "Index";
}

<h4 align="center">Tournaments</h4>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i>
        New
    </a>
</p>
<div class="wrapper fadeInDown">
    <div id="formContentDisplay">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TournamentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TournamentName)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TournamentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TournamentName)
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn btn-info btn-sm" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Edit","Tournaments",new {id = item.TournamentId})" class=""><i class="glyphicon glyphicon-pencil"> Edit</i></a></li>
                                    <li><a href="@Url.Action("Delete","Tournaments",new {id = item.TournamentId})" class=""><i class="glyphicon glyphicon-trash"> Delete</i></a></li>
                                    @*<li><a onclick="Delete(@item.TournamentId)" class=""> <i class="glyphicon glyphicon-trash"> Delete</i></a></li>*@
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>