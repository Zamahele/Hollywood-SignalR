@model IEnumerable<BLL.Event.Event>

@{
    ViewData["Title"] = "Index";
}

<h4 align="center">Events</h4>

<p>
    <a href="@Url.Action("Create","Events")" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign"> Create</i></a>
</p>
<div class="wrapper fadeInDown">
    <div id="formContentDisplay">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tournament)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventEndDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AutoClose)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tournament.TournamentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventEndDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AutoClose)
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn btn-info btn-sm" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Edit","Events",new {id = item.EventId})" class=""><i class="glyphicon glyphicon-pencil"> Edit</i></a></li>
                                    <li><a href="@Url.Action("Delete","Events",new {id = item.EventId})" class=""><i class="glyphicon glyphicon-trash"> Delete</i></a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>